generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

model user {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model product {
  id          Int      @id @default(autoincrement())
  name        String
  price       Decimal
  tags        String
  description String   @db.Text // This will help to add unlimited text it is only for mysql
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
